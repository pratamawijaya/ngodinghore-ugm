<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgThumbnail"
        android:scaleType="centerCrop"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_launcher"
        android:layout_centerVertical="true"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_toLeftOf="@id/imgThumbnail"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textTitle"
            android:text="Title aksfashflk aksfkasfhklasfklasfjklasjf kasjfklasjflkajsf kljas fkljas lkfjasklfjaklsjflkasj fl"
            android:textColor="@color/primaryColor"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textRating"
                android:layout_width="wrap_content"
                android:text="9.0"
                android:background="#ffff00"
                android:layout_marginRight="3dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textCategories"
                android:layout_width="wrap_content"
                android:text="Categories"
                android:layout_marginRight="3dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textDistance"
                android:layout_width="wrap_content"
                android:text="0.4 miles"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:layout_marginTop="3dp"
            android:id="@+id/textAddress"
            android:text="Address asfasfas fasfas fas fbasjkfa jsafhjkashfa akjsfjkashf jabfjabsfjkashfjashf asfhjkashf"
            android:textColor="@color/primaryColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</RelativeLayout>